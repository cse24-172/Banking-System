<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="src.controller.LoginController">
   <center>
      <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f4f4f4;">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <Label text="Banking System - CSE202" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
               <Font name="System Bold" size="24.0" />
            </font>
         </Label>
         <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-padding: 30; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 5;">
            <Label text="Login" style="-fx-font-size: 18; -fx-font-weight: bold;" />
            <TextField fx:id="customerIdField" promptText="Enter Customer ID" />
            <Button fx:id="loginButton" text="Login" onAction="#handleLogin" 
                   style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120;" />
            <Button fx:id="registerButton" text="Register New Customer" onAction="#handleRegister" 
                   style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 180;" />
            <Label fx:id="messageLabel" style="-fx-text-fill: red;" />
         </VBox>
      </VBox>
   </center>
</BorderPane>