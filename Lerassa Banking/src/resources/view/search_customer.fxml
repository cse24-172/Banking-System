<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.SearchCustomerController"
      alignment="TOP_CENTER" spacing="20" prefWidth="900" prefHeight="700"
      style="-fx-padding:30;">

    <!-- HEADER WITH BACK BUTTON + TITLE -->
    <HBox spacing="20" alignment="CENTER_LEFT" prefWidth="900">
        <Button fx:id="backBtn"
                text="â¬… Back"
                onAction="#goBack"
                style="-fx-background-color:#1A73E8;
                       -fx-text-fill:white;
                       -fx-font-size:16px;
                       -fx-padding:6 20;"/>

        <Label text="Search Customer"
               style="-fx-font-size:28px; -fx-text-fill:#1A73E8;"/>
    </HBox>

    <TextField fx:id="searchField"
               promptText="Enter name, phone, ID, or email"
               prefWidth="400"/>

    <Button fx:id="searchBtn"
            text="Search"
            prefWidth="200"/>

    <TableView fx:id="resultsTable" prefWidth="850" prefHeight="500">
        <columns>
            <TableColumn fx:id="idCol" text="ID" prefWidth="60"/>
            <TableColumn fx:id="nameCol" text="Name" prefWidth="200"/>
            <TableColumn fx:id="phoneCol" text="Phone" prefWidth="120"/>
            <TableColumn fx:id="emailCol" text="Email" prefWidth="200"/>
            <TableColumn fx:id="addressCol" text="Address" prefWidth="250"/>
        </columns>
    </TableView>

</VBox>
