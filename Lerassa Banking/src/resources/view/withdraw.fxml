<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>

<BorderPane prefWidth="900" prefHeight="600"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.WithdrawController">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox spacing="25" alignment="TOP_CENTER"
              prefWidth="250"
              style="-fx-background-color:#1A73E8; -fx-padding:25;">

            <Label text="Withdraw Menu"
                   style="-fx-text-fill:white; -fx-font-size:24px; -fx-font-weight:bold;"/>

            <Button fx:id="backBtn" text="â¬… Back"
                    prefWidth="180"
                    style="-fx-background-color:white; -fx-text-fill:#1A73E8;
                           -fx-font-size:16px; -fx-background-radius:10;"/>

        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-padding:40;">

            <Label text="Withdraw Funds"
                   style="-fx-font-size:32px; -fx-font-weight:bold; -fx-text-fill:#1A73E8;"/>

            <!-- FORM CARD -->
            <VBox spacing="20" alignment="CENTER"
                  style="-fx-background-color:white;
                         -fx-padding:30;
                         -fx-border-radius:20;
                         -fx-background-radius:20;
                         -fx-effect:dropshadow(gaussian,#00000033,15,0,0,4);"
                  prefWidth="500">

                <!-- ACCOUNT -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Account:" style="-fx-font-size:16px;"/>
                    <ChoiceBox fx:id="accountBox" prefWidth="300"/>
                </HBox>

                <!-- AMOUNT -->
                <TextField fx:id="amountField" promptText="Amount (P)"
                           prefWidth="300"
                           style="-fx-background-color:#F3F6FB; -fx-padding:10;
                                  -fx-font-size:16px; -fx-background-radius:10;"/>

                <!-- PHONE -->
                <HBox spacing="10" alignment="CENTER">
                    <ChoiceBox fx:id="countryCodeBox" prefWidth="90"/>
                    <TextField fx:id="phoneField" promptText="Phone Number"
                               prefWidth="200"
                               style="-fx-background-color:#F3F6FB; -fx-padding:10;
                                      -fx-font-size:16px; -fx-background-radius:10;"/>
                </HBox>

                <!-- GENERATED PIN -->
                <TextField fx:id="pinField" promptText="Generated PIN"
                           editable="false"
                           prefWidth="300"
                           style="-fx-background-color:#E9EDF5; -fx-padding:10;
                                  -fx-font-size:16px; -fx-background-radius:10;
                                  -fx-text-fill:gray;"/>

                <!-- WITHDRAW BUTTON -->
                <Button fx:id="withdrawBtn" text="Withdraw"
                        prefWidth="250"
                        style="-fx-background-color:#1A73E8; -fx-text-fill:white;
                               -fx-font-size:20px; -fx-background-radius:12;"/>

                <Label fx:id="statusLabel"
                       style="-fx-text-fill:red; -fx-font-size:16px;"/>

            </VBox>

        </VBox>
    </center>

</BorderPane>
