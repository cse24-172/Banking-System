<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.TransactionsController"
            prefWidth="900" prefHeight="600">

    <!-- HEADER -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT"
              style="-fx-padding:20; -fx-background-color:white; -fx-border-color:#DDD;">

            <Button fx:id="backBtn" text="â† Back"
                    style="-fx-font-size:16px; -fx-background-color:#1A73E8;
                           -fx-text-fill:white; -fx-padding:8 20;"/>

            <!-- FIXED LABEL (escaped &) -->
            <Label text="Payments &amp; Transactions"
                   style="-fx-font-size:26px;
                          -fx-font-weight:bold;
                          -fx-text-fill:#1A73E8;"/>
        </HBox>
    </top>

    <!-- TABLE -->
    <center>
        <TableView fx:id="transactionsTable" style="-fx-padding:20;">
            <columns>
                <TableColumn fx:id="idCol" text="ID" prefWidth="80"/>
                <TableColumn fx:id="accCol" text="Account" prefWidth="150"/>
                <TableColumn fx:id="typeCol" text="Type" prefWidth="150"/>
                <TableColumn fx:id="amountCol" text="Amount" prefWidth="150"/>
                <TableColumn fx:id="dateCol" text="Date" prefWidth="200"/>
            </columns>
        </TableView>
    </center>

</BorderPane>
