<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>

<BorderPane prefWidth="900" prefHeight="600"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.DepositController">

    <!-- SIDEBAR -->
    <left>
        <VBox spacing="20" alignment="TOP_CENTER"
              prefWidth="250"
              style="-fx-background-color:#1A73E8; -fx-padding:20;">
            
            <Label text="Deposit Menu"
                   style="-fx-text-fill:white;
                          -fx-font-size:22px;
                          -fx-font-weight:bold;"/>

            <Button fx:id="backBtn" text="â¬… Back"
                    prefWidth="180"
                    style="-fx-background-color:white;
                           -fx-text-fill:#1A73E8;
                           -fx-font-size:16px;"/>
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <VBox alignment="CENTER" spacing="25"
              style="-fx-padding:20;">

            <Label text="Deposit Money"
                   style="-fx-font-size:30px;
                          -fx-text-fill:#1A73E8;
                          -fx-font-weight:bold;"/>

            <!-- ACCOUNT SELECTION -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Deposit To:" style="-fx-font-size:16px;"/>
                <ChoiceBox fx:id="accountBox" prefWidth="300"/>
            </HBox>

            <!-- AMOUNT -->
            <TextField fx:id="amountField"
                       prefWidth="300"
                       promptText="Enter amount"
                       style="-fx-font-size:16px;
                              -fx-background-radius:10;
                              -fx-padding:10;
                              -fx-background-color:#F2F4F8;"/>

            <Button fx:id="depositBtn"
                    text="Deposit"
                    prefWidth="220"
                    style="-fx-padding:10;
                           -fx-font-size:18px;
                           -fx-background-color:#1A73E8;
                           -fx-text-fill:white;
                           -fx-background-radius:10;"/>

            <Label fx:id="statusLabel"
                   style="-fx-font-size:16px;
                          -fx-text-fill:red;"/>
        </VBox>
    </center>

</BorderPane>
