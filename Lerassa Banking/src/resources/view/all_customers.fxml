<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.AllCustomersController"
            prefWidth="1000" prefHeight="700">

    <!-- TOP BAR WITH BACK BUTTON + TITLE -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-padding:15;">
            <Button fx:id="backBtn"
                    text="â¬… Back"
                    onAction="#goBack"
                    style="-fx-background-color:#1A73E8;
                           -fx-text-fill:white;
                           -fx-font-size:16px;
                           -fx-padding:6 20;"/>

            <Label text="All Customers"
                   style="-fx-font-size:26px; -fx-text-fill:#1A73E8;"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="customersTable" prefWidth="900" prefHeight="600">
            <columns>
                <TableColumn fx:id="idCol" text="ID" prefWidth="60"/>
                <TableColumn fx:id="titleCol" text="Title" prefWidth="80"/>
                <TableColumn fx:id="nameCol" text="Full Name" prefWidth="200"/>
                <TableColumn fx:id="phoneCol" text="Phone" prefWidth="150"/>
                <TableColumn fx:id="emailCol" text="Email" prefWidth="200"/>
                <TableColumn fx:id="addressCol" text="Address" prefWidth="200"/>
            </columns>
        </TableView>
    </center>

</BorderPane>
