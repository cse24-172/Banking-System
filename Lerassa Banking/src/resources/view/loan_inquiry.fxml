<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.LoanInquiryController"
      spacing="25" alignment="TOP_CENTER"
      style="-fx-padding:30; -fx-background-color:white;">

    <Label text="Loan Inquiry"
           style="-fx-font-size:28px; -fx-text-fill:#1A73E8; -fx-font-weight:bold;"/>

    <Label text="Select a loan type below to check eligibility:"
           style="-fx-font-size:16px;"/>

    <VBox spacing="15" prefWidth="600">

        <Button text="Personal Loan"
                fx:id="personalLoanBtn"
                style="-fx-padding:15; -fx-background-color:#1A73E8; -fx-text-fill:white; -fx-font-size:18px;"/>

        <Button text="Business Loan"
                fx:id="businessLoanBtn"
                style="-fx-padding:15; -fx-background-color:#1A73E8; -fx-text-fill:white; -fx-font-size:18px;"/>

        <Button text="Student Loan"
                fx:id="studentLoanBtn"
                style="-fx-padding:15; -fx-background-color:#1A73E8; -fx-text-fill:white; -fx-font-size:18px;"/>

    </VBox>

    <Button text="Back to Dashboard"
            fx:id="backBtn"
            style="-fx-padding:12; -fx-background-color:#555; -fx-text-fill:white; -fx-font-size:16px;"/>

</VBox>
