<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.SettingsController"
      alignment="TOP_CENTER" spacing="20"
      style="-fx-padding:30; -fx-background-color:white;">

    <Label text="Settings"
           style="-fx-font-size:28px; -fx-font-weight:bold; -fx-text-fill:#1A73E8;"/>

    <VBox spacing="15" prefWidth="500">

        <Button text="Edit Profile"
                fx:id="editProfileBtn"
                style="-fx-padding:12; -fx-background-color:#1A73E8; -fx-text-fill:white; -fx-font-size:16px;"/>

        <Button text="Change Password"
                fx:id="changePasswordBtn"
                style="-fx-padding:12; -fx-background-color:#1A73E8; -fx-text-fill:white; -fx-font-size:16px;"/>

        <Button text="Notification Settings"
                fx:id="notificationsBtn"
                style="-fx-padding:12; -fx-background-color:#1A73E8; -fx-text-fill:white; -fx-font-size:16px;"/>

        <Separator/>

        <Button text="Back to Dashboard"
                fx:id="backBtn"
                style="-fx-padding:12; -fx-background-color:#555; -fx-text-fill:white; -fx-font-size:16px;"/>

    </VBox>

</VBox>
